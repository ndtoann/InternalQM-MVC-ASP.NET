    document.querySelectorAll('.location-item').forEach(item => {
        const location = item.getAttribute('data-location');
        const fullness = item.getAttribute('data-fullness');

        item.innerHTML = `
            <div class="location-name">${location}</div>
            <div class="fullness-bar" style="width: ${fullness}%;"></div>
            <div class="percentage">${fullness}%</div>
        `;

