    }

    .rack-column {
        display: flex;
        flex-direction: column;
        gap: 5px;
        flex-shrink: 0;
    }

    .location-item {
        width: 200px;
        height: 50px;
        border: 1px solid #ccc;
        border-radius: 4px;
        position: relative;
        overflow: hidden;
        background-color: #f8f8f8;
        cursor: pointer;
        box-sizing: border-box;
        transition: border-color 0.2s;
    }

        .location-item:hover {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .fullness-bar {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #28a745;
        opacity: 0.7;
        transition: width 0.4s ease;
        z-index: 1;
    }

    .location-name {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 5px;
        font-size: 0.8em;
        font-weight: bold;
        color: #111;
        z-index: 3;
    }

    .percentage {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 5px;
        font-size: 0.8em;
        font-weight: bold;
        color: black;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        z-index: 3;
    }

    .location-item.high-fullness .fullness-bar {
        background-color: #dc3545;
    }

    .location-item.low-fullness .fullness-bar {
