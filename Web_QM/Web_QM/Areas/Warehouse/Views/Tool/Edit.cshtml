@using Web_QM.Models
@model Tool;
@{
    ViewData["Title"] = "Cập nhật dao cụ, đồ gá";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Cập nhật dao cụ, đồ gá</h4>
                    <form action="edit" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="ToolCode">Mã vật tư</label>
                            <input asp-for="ToolCode" type="text" class="form-control">
                            <span asp-validation-for="ToolCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ToolName">Tên vật tư</label>
                            <input asp-for="ToolName" type="text" class="form-control">
                            <span asp-validation-for="ToolName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label asp-for="InitialQty">Số lượng</label>
                                <input asp-for="InitialQty" type="number" class="form-control">
                                <span asp-validation-for="InitialQty" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="Type">Loại</label>
                                <select asp-for="Type" class="form-control">
                                    <option value="Dao cụ">Dao cụ</option>
                                    <option value="Đồ gá">Đồ gá</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="Unit">Đơn vị</label>
                                <input asp-for="Unit" type="text" class="form-control">
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="Location">Vị trí</label>
                                <input asp-for="Location" type="text" class="form-control">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label asp-for="TotalImported">SL Nhập</label>
                                <input asp-for="TotalImported" type="number" class="form-control">
                                <span asp-validation-for="TotalImported" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="TotalScrapped">SL Hủy</label>
                                <input asp-for="TotalScrapped" type="number" class="form-control">
                                <span asp-validation-for="TotalScrapped" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="TotalIssued">SL Xuất</label>
                                <input asp-for="TotalIssued" type="number" class="form-control">
                                <span asp-validation-for="TotalIssued" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="TotalReturned">SL Trả</label>
                                <input asp-for="TotalReturned" type="number" class="form-control">
                                <span asp-validation-for="TotalReturned" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note">Ghi chú</label>
                            <input asp-for="Note" type="text" class="form-control">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Lưu
                        </button>
                        <button type="reset" class="btn btn-warning btn-icon-text">
                            <i class="ti-reload btn-icon-prepend"></i>
                            Làm mới
                        </button>
                        <a href="~/warehouse/tool" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}