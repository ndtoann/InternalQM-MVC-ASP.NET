@using Web_QM.Models.ViewModels
@model IEnumerable<MonthlyPayrollView>;
@{
    ViewData["Title"] = "Quản lý lương hàng tháng";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách bảng lương hàng tháng</h4>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="" method="get">
                        <div class="row align-items-center">
                            <div class="col-lg-2">
                                <div class="form-group mb-0">
                                    <select class="form-control" name="status" asp-items="@(ViewData["Status"] as SelectList)"></select>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group mb-0">
                                    <select class="form-control" name="department" asp-items="@(ViewData["Departments"] as List<SelectListItem>)"></select>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group mb-0">
                                    <input type="month"
                                           class="form-control"
                                           name="month"
                                           value="@(ViewBag.MonthSearch)" />
                                </div>
                            </div>
                            <div class="col-lg-4 d-flex align-items-center">
                                <div class="form-group me-2 flex-grow-1 mb-0">
                                    <input type="text"
                                           class="form-control"
                                           name="key"
                                           placeholder="Nhập vào đây để tìm kiếm"
                                           value="@ViewBag.KeySearch" />
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <a class="btn btn-success" href="~/admin/monthlypayroll/add">Thêm mới</a>
                    <a class="btn btn-success" id="btnApprove">Duyệt phiếu lương</a>
                    <a class="btn btn-success" href="#" data-bs-toggle="modal" data-bs-target="#importExcelModal">Import Excel</a>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>
                                        <input type="checkbox" id="checkAll" />
                                    </th>
                                    <th>Nhân viên</th>
                                    <th>Bộ phận</th>
                                    <th class="text-wrap">Ngày trách nhiệm</th>
                                    <th class="text-wrap">TG làm việc ngày thường</th>
                                    <th class="text-wrap">TG thêm giờ ngày thường</th>
                                    <th class="text-wrap">TG thêm giờ CN</th>
                                    <th class="text-wrap">TG thêm giờ ngày lễ, tết</th>
                                    <th class="text-wrap">TG thêm giờ sau 23 giờ</th>
                                    <th class="text-wrap">Tổng lương nhận</th>
                                    <th>Tháng/Năm</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody class="salary-table-body">
                                @{
                                    var count = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    string statusClass = "";
                                    string statusText = "";
                                    switch (item.Status)
                                    {
                                        case 0:
                                            statusClass = "text-danger";
                                            statusText = "Nháp";
                                            break;
                                        case 1:
                                            statusClass = "text-warning";
                                            statusText = "Đang chờ xác nhận";
                                            break;
                                        case 2:
                                            statusClass = "text-success";
                                            statusText = "Đã xác nhận";
                                            break;
                                        case 3:
                                            statusClass = "text-info";
                                            statusText = "NV Khiếu nại";
                                            break;
                                        default:
                                            statusClass = "text-secondary";
                                            statusText = "Không xác định";
                                            break;
                                    }
                                    <tr class="context-menu-row" data-id="@item.Id"
                                        data-employee="@item.EmployeeName"
                                        data-code="@item.EmployeeCode"
                                        data-month="@item.DateMonth"
                                        data-total-salary="@(item.TotalSalary.ToString("N0") ?? "0")">
                                        <td>@(count++)</td>
                                        <td>
                                            @if(item.Status == 0 || item.Status == 3)
                                            {
                                                <input type="checkbox" class="checkItem" data-id="@item.Id" />
                                            }
                                        </td>
                                        <td>@item.EmployeeCode - @item.EmployeeName</td>
                                        <td>@item.Department</td>
                                        <td>@item.ResponsibleDays ngày</td>
                                        <td>@item.RegularHours giờ</td>
                                        <td>@item.RegularOvertimeHours</td>
                                        <td>@item.SundayOvertimeHours</td>
                                        <td>@item.HolidayOvertimeHours</td>
                                        <td>@item.LateNightOvertimeHours</td>
                                        <td><span class="badge bg-success">@(item.TotalSalary.ToString("N0") ?? "") vnd</span></td>
                                        <td>
                                            @{
                                                if (DateTime.TryParseExact(item.DateMonth, "yyyy-MM",
                                                System.Globalization.CultureInfo.InvariantCulture,
                                                System.Globalization.DateTimeStyles.None,
                                                out DateTime dateValue))
                                                {
                                                    @dateValue.ToString("MM-yyyy")
                                                }
                                                else
                                                {
                                                    @item.DateMonth
                                                }
                                            }
                                        </td>
                                        <td>
                                            <span class="@statusClass">@statusText</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="importExcelModal" tabindex="-1" aria-labelledby="importExcelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importExcelModalLabel">Import</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importForm" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div id="import-alert" class="alert d-none" role="alert"></div>

                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Chọn File Excel (.xlsx, .xls)</label>
                        <input class="form-control" type="file" id="excelFile" name="excelFile" accept=".xlsx, .xls" required>
                    </div>

                    <p>
                        Vui lòng đảm bảo dùng đúng file excel mẫu.
                    </p>
                    <a href="~/admin/monthlypayroll/DownloadTemplate" class="btn btn-sm btn-info" download>
                        <i class="mdi mdi-download"></i> Tải file mẫu Import
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary" id="btnImport">
                        <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        <span id="btnText">Thực hiện Import</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="contextMenu" class="dropdown-menu" style="position: absolute; display: none;">
    <a class="dropdown-item" href="#" id="viewLink">Xem chi tiết</a>
    <a class="dropdown-item" href="#" id="complaintLink">Lịch sử khiếu nại</a>
    <a class="dropdown-item" href="#" id="editLink">Sửa</a>
    <a class="dropdown-item" href="#" id="deleteLink">Xóa</a>
</div>

<div class="modal fade" id="salaryDetailModal" tabindex="-1" aria-labelledby="salaryDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="salaryDetailModalLabel">Chi Tiết Lương</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="mb-3">
                    Nhân viên: <strong id="employee-detail-name"></strong> -
                    Mã NV: <strong id="employee-detail-code"></strong> -
                    Tháng/Năm: <strong id="employee-detail-month"></strong>
                    <span class="fs-5 fw-bold badge bg-success ms-3">Tổng Lương: <span id="employee-detail-total-salary"></span> VNĐ</span>
                </h6>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr>
                                <th style="width: 25%;">Khoản Mục</th>
                                <th style="width: 25%;">Giá Trị</th>
                                <th style="width: 25%;">Khoản Mục</th>
                                <th style="width: 25%;">Giá Trị</th>
                            </tr>
                        </thead>
                        <tbody id="salary-details-body">
                        </tbody>
                    </table>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-end">
                        <p class="mb-1"><strong>Ngày tạo:</strong> <span id="created-date-info">N/A</span></p>
                        <p class="mb-0"><strong>Ngày cập nhật:</strong> <span id="updated-date-info">N/A</span></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="complaintHistoryModal" tabindex="-1" aria-labelledby="complaintHistoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="complaintHistoryModalLabel">
                    <i class="mdi mdi-history"></i> Lịch Sử Khiếu Nại: <span id="complaint-employee-info"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 50%;">Nội Dung Khiếu Nại</th>
                                <th style="width: 20%;">Ngày Gửi</th>
                            </tr>
                        </thead>
                        <tbody id="complaint-history-body">
                        </tbody>
                    </table>
                </div>
                <div id="complaint-history-empty" class="alert alert-info text-center d-none">
                    Không có khiếu nại nào được ghi nhận cho phiếu lương này.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatCurrency(value) {
            if (value === null || value === undefined) return '0';
            const numericValue = parseFloat(value);
            if (isNaN(numericValue)) return value;
            return numericValue.toLocaleString('vi-VN', { style: 'decimal' });
        }

        function getStatusText(status) {
            switch (status) {
                case 0:
                    return '<span class="text-danger">Nháp</span>';
                case 1:
                    return '<span class="text-warning">Đang chờ xác nhận</span>';
                case 2:
                    return '<span class="text-success">Đã xác nhận</span>';
                case 3:
                    return '<span class="text-info">NV Khiếu nại</span>';
                default:
                    return 'Không xác định';
            }
        }

        function formatFieldValue(key, value) {
            if (value === null || value === undefined) return 'N/A';

            const timeFields = ['regularHours', 'regularOvertimeHours', 'sundayOvertimeHours', 'holidayOvertimeHours', 'lateNightOvertimeHours', 'shift3Hours', 'shift3OvertimeHours', 'shift3SundayOvertimeHours'];
            const dayFields = ['responsibleDays', 'paidLeaveDay'];
            const currencyFields = ['businessTripAndPhoneFee', 'penalty5S', 'unionFee', 'pit', 'totalSalary', 'advanceSalary'];

            if (currencyFields.includes(key)) {
                return `${formatCurrency(value)} VNĐ`;
            } else if (timeFields.includes(key)) {
                const numericValue = parseFloat(value);
                return isNaN(numericValue) ? value : `${numericValue} giờ`;
            } else if (dayFields.includes(key)) {
                const numericValue = parseFloat(value);
                return isNaN(numericValue) ? value : `${numericValue} ngày`;
            } else if (key === 'status') {
                const numericValue = parseInt(value);
                return getStatusText(numericValue);
            }
            return value;
        }

        function getDetails(id, employeeName, employeeCode, dateMonth, totalSalary) {
            fetch(`/admin/monthlypayroll/GetDetails?id=${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Không tìm thấy dữ liệu lương.');
                    }
                    return response.json();
                })
                .then(data => {
                    const tbody = document.getElementById('salary-details-body');
                    tbody.innerHTML = '';

                    document.getElementById('employee-detail-name').textContent = employeeName;
                    document.getElementById('employee-detail-code').textContent = employeeCode;
                    document.getElementById('employee-detail-total-salary').textContent = totalSalary;

                    let formattedMonth = dateMonth;
                    try {
                        const [year, month] = dateMonth.split('-');
                        formattedMonth = `${month}/${year}`;
                    } catch (e) {
                    }
                    document.getElementById('employee-detail-month').textContent = formattedMonth;

                    document.getElementById('created-date-info').textContent = data.createdDate || 'N/A';
                    document.getElementById('updated-date-info').textContent = data.updatedDate || 'N/A';

                    const fieldsLeft = [
                        { label: 'Ngày trách nhiệm', key: 'responsibleDays' },
                        { label: 'TG làm việc ngày thường', key: 'regularHours' },
                        { label: 'TG thêm giờ ngày thưởng', key: 'regularOvertimeHours' },
                        { label: 'TG thêm giờ CN', key: 'sundayOvertimeHours' },
                        { label: 'TG thêm giờ ngày lễ, tết', key: 'holidayOvertimeHours' },
                        { label: 'TG thêm giờ sau 23 giờ', key: 'lateNightOvertimeHours' },
                        { label: 'TG làm ca 3', key: 'shift3Hours' },
                        { label: 'TG làm thêm giờ ca 3', key: 'shift3OvertimeHours' },
                        { label: 'TG làm thêm giờ ca 3 CN', key: 'shift3SundayOvertimeHours' },
                        { label: 'Phí công tác + điện thoại', key: 'businessTripAndPhoneFee' },
                    ];

                    const fieldsRight = [
                        { label: 'Phạt 5S', key: 'penalty5S' },
                        { label: 'Công đoàn', key: 'unionFee' },
                        { label: 'Thuế TNCN', key: 'pit' },
                        { label: 'Số ngày phép còn lại', key: 'paidLeaveDay' },
                        { label: 'Đã ứng', key: 'advanceSalary' },
                        { label: 'Trạng thái', key: 'status' },
                    ];

                    const maxLength = Math.max(fieldsLeft.length, fieldsRight.length);

                    for (let i = 0; i < maxLength; i++) {
                        const tr = document.createElement('tr');
                        const field1 = fieldsLeft[i];
                        const field2 = fieldsRight[i];

                        if (field1) {
                            const value1 = formatFieldValue(field1.key, data[field1.key]);
                            tr.innerHTML += `<td>${field1.label}</td><td>${value1}</td>`;
                        } else {
                            tr.innerHTML += `<td></td><td></td>`;
                        }

                        if (field2) {
                            const value2 = formatFieldValue(field2.key, data[field2.key]);
                            tr.innerHTML += `<td>${field2.label}</td><td>${value2}</td>`;
                        } else {
                            tr.innerHTML += `<td></td><td></td>`;
                        }

                        tbody.appendChild(tr);
                    }

                    new bootstrap.Modal(document.getElementById('salaryDetailModal')).show();
                })
                .catch(error => {
                    alert('Lỗi: ' + error.message);
                });
        }

        function getComplaintHistory(monthlyPayId, employeeName, employeeCode, dateMonth) {
            const modalBody = document.getElementById('complaint-history-body');
            const emptyAlert = document.getElementById('complaint-history-empty');

            modalBody.innerHTML = '<tr><td colspan="4" class="text-center"><div class="spinner-border spinner-border-sm" role="status"></div> Đang tải...</td></tr>';
            emptyAlert.classList.add('d-none');

            let formattedMonth = dateMonth;
            try {
                const [year, month] = dateMonth.split('-');
                formattedMonth = `${month}/${year}`;
            } catch (e) { }

            document.getElementById('complaint-employee-info').textContent = `${employeeName} (${employeeCode}) - ${formattedMonth}`;


            fetch(`/admin/monthlypayroll/GetComplaintHistory?monthlyPayId=${monthlyPayId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Không thể tải lịch sử khiếu nại.');
                    }
                    return response.json();
                })
                .then(data => {
                    modalBody.innerHTML = '';
                    if (data && data.length > 0) {
                        data.forEach((complaint, index) => {
                            const tr = document.createElement('tr');
                            tr.innerHTML = `
                                <td>${index + 1}</td>
                                <td class="text-wrap">${complaint.compaintContent}</td>
                                <td>${complaint.createdDate || 'N/A'}</td>
                            `;
                            modalBody.appendChild(tr);
                        });
                    } else {
                        emptyAlert.classList.remove('d-none');
                    }
                    new bootstrap.Modal(document.getElementById('complaintHistoryModal')).show();
                })
                .catch(error => {
                    modalBody.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Lỗi tải dữ liệu: ${error.message}</td></tr>`;
                    new bootstrap.Modal(document.getElementById('complaintHistoryModal')).show();
                });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const tableBodies = document.querySelectorAll('.salary-table-body');
            const contextMenu = document.getElementById('contextMenu');
            let id = null;
            let employeeName = null;
            let employeeCode = null;
            let dateMonth = null;
            let totalSalary = null;


            const checkAll = document.getElementById('checkAll');
            const checkItems = document.querySelectorAll('.checkItem');
            const btnApprove = document.getElementById('btnApprove');

            checkAll.addEventListener('change', function () {
                checkItems.forEach(item => {
                    item.checked = this.checked;
                });
            });

            checkItems.forEach(item => {
                item.addEventListener('change', function () {
                    const allChecked = Array.from(checkItems).every(i => i.checked);
                    checkAll.checked = allChecked;
                });
            });

            btnApprove.addEventListener('click', function () {
                const selectedIds = Array.from(checkItems)
                    .filter(item => item.checked)
                    .map(item => item.getAttribute('data-id'));

                if (selectedIds.length === 0) {
                    Swal.fire('Thông báo', 'Vui lòng chọn ít nhất một mục để duyệt.', 'warning');
                    return;
                }

                Swal.fire({
                    title: 'Xác nhận duyệt',
                    text: `Duyệt ${selectedIds.length} mục đã chọn?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đồng ý',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/admin/monthlypayroll/ApproveVotes', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(selectedIds)
                        })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Có lỗi xảy ra trong quá trình duyệt.');
                            }
                            return response.json();
                        })
                        .then(data => {
                            Swal.fire(
                                'Thành công!',
                                data.message || 'Các mục đã chọn đã được duyệt thành công.',
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        })
                        .catch(error => {
                            Swal.fire(
                                'Lỗi!',
                                error.message,
                                'error'
                            );
                        });
                    }
                });
            });

            tableBodies.forEach(tableBody => {
                tableBody.addEventListener('contextmenu', function (event) {
                    const row = event.target.closest('tr');
                    if (!row) return;

                    event.preventDefault();

                    id = row.getAttribute('data-id');
                    employeeName = row.getAttribute('data-employee');
                    employeeCode = row.getAttribute('data-code');
                    dateMonth = row.getAttribute('data-month');
                    totalSalary = row.getAttribute('data-total-salary');

                    contextMenu.style.display = 'block';
                    contextMenu.style.left = event.pageX + 'px';
                    contextMenu.style.top = event.pageY + 'px';
                });
            });

            document.addEventListener('click', function (e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.style.display = 'none';
                }
            });

            document.getElementById('viewLink').addEventListener('click', function (event) {
                if (id) {
                    contextMenu.style.display = 'none';
                    getDetails(id, employeeName, employeeCode, dateMonth, totalSalary);
                }
            });

            document.getElementById('complaintLink').addEventListener('click', function (event) {
                event.preventDefault();
                if (id) {
                    contextMenu.style.display = 'none';
                    getComplaintHistory(id, employeeName, employeeCode, dateMonth);
                }
            });

            document.getElementById('editLink').addEventListener('click', function (event) {
                if (id) {
                    safeRedirect(`/admin/monthlypayroll/edit?id=${id}`);
                }
            });

            document.getElementById('deleteLink').addEventListener('click', function (event) {
                if (id && confirm(`Bạn có chắc chắn muốn xóa thông tin lương tháng ${dateMonth} của nhân viên ${employeeCode} - ${employeeName}?`)) {
                    safeRedirect(`/admin/monthlypayroll/delete?id=${id}`);
                }
            });


            const importForm = document.getElementById('importForm');
            const btnImport = document.getElementById('btnImport');
            const btnText = document.getElementById('btnText');
            const spinner = document.getElementById('spinner');
            const importModal = new bootstrap.Modal(document.getElementById('importExcelModal'));

            importForm.addEventListener('submit', function (e) {
                e.preventDefault();

                const file = document.getElementById('excelFile').files[0];
                if (!file) {
                    Swal.fire('Thao tác thất bại', 'Vui lòng chọn một file Excel để import.', 'warning');
                    return;
                }

                btnImport.disabled = true;
                btnText.textContent = 'Đang xử lý...';
                spinner.classList.remove('d-none');

                const formData = new FormData(importForm);

                fetch('/admin/monthlypayroll/import', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else if (response.status === 400 || response.status === 500) {
                        return response.json().then(errorData => {
                            throw new Error(errorData.message);
                        });
                    }
                    throw new Error('Lỗi không xác định: ' + response.statusText);
                })
                .then(data => {
                    importModal.hide();
                    Swal.fire({
                        title: 'Import Thành công! 🎉',
                        html: data.message,
                        icon: 'success',
                        confirmButtonText: 'Đã hiểu'
                    }).then(() => {
                        location.reload();
                    });
                })
                .catch(error => {
                    importModal.hide();
                    console.error('Lỗi khi Import:', error);

                    Swal.fire({
                        title: 'Import Thất bại! ❌',
                        html: error.message,
                        icon: 'error',
                        confirmButtonText: 'Đóng'
                    }).then(() => {
                    });
                })
                .finally(() => {
                    btnImport.disabled = false;
                    btnText.textContent = 'Thực hiện Import';
                    spinner.classList.add('d-none');
                });
            });

        });
    </script>
