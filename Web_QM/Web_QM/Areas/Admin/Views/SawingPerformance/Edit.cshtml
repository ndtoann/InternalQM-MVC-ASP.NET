@using Web_QM.Models
@model SawingPerformance;
@{
    ViewData["Title"] = "Sửa dữ liệu";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Cập nhật</h4>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="edit" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="EmployeeCode">Nhân viên</label>
                            <select asp-for="EmployeeCode" asp-items="ViewBag.ListEmployee" class="js-example-basic-multiple w-100">
                                <option value="">Chọn nhân viên</option>
                            </select>
                            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="SalesAmountUSD">Doanh số (USD)</label>
                                <input asp-for="SalesAmountUSD" type="number" class="form-control">
                                <span asp-validation-for="SalesAmountUSD" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="WorkMinute">Thời gian làm việc thực tế</label>
                                <input asp-for="WorkMinute" type="number" class="form-control">
                                <span asp-validation-for="WorkMinute" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Thời gian</label>
                            <input asp-for="MeasurementMonth" type="number" class="form-control" placeholder="Tháng">
                            <input asp-for="MeasurementYear" type="number" class="form-control" placeholder="Năm">
                            <span asp-validation-for="MeasurementMonth" class="text-danger"></span>
                            <span asp-validation-for="MeasurementYear" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Lưu
                        </button>
                        <button type="reset" class="btn btn-warning btn-icon-text">
                            <i class="ti-reload btn-icon-prepend"></i>
                            Làm mới
                        </button>
                        <a href="~/admin/sawingperformance" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}