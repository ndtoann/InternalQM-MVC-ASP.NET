@{
    ViewData["Title"] = "Dashboard";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&display=swap');

    .terminal-container {
        width: 80vw;
        margin: 20px auto;
        background-color: #0f0f0f;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0,0,0,0.4);
        font-family: 'Fira Code', monospace;
        border: 1px solid #333;
    }

    .terminal-header {
        background-color: #252525;
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dots { display: flex; gap: 8px; }
    .dot { width: 12px; height: 12px; border-radius: 50%; }
    .red { background: #ff5f56; }
    .yellow { background: #ffbd2e; }
    .green { background: #27c93f; }
    .terminal-title { color: #666; font-size: 12px; }

    .terminal-body {
        padding: 30px;
        color: #d4d4d4;
        font-size: 14px;
        line-height: 1.8;
    }

    .main-title {
        color: #4fc1ff;
        font-size: 2.5rem;
        font-weight: 600;
        margin: 0;
        overflow: hidden;
        white-space: nowrap;
        border-right: 3px solid #4fc1ff;
        width: 0;
        animation: typing 1s steps(5, end) forwards, blink 0.8s infinite;
    }

    .progress-section {
        margin: 25px 0;
        opacity: 0;
        animation: fadeIn 0.4s forwards 1.2s;
    }

    .progress-bar-bg {
        width: 100%;
        height: 4px;
        background: #333;
        border-radius: 2px;
        margin-top: 10px;
        overflow: hidden;
    }

    .progress-bar-fill {
        width: 0;
        height: 100%;
        background: #4fc1ff;
        animation: load 1.5s ease-in-out forwards 1.5s;
    }

    .code-logs {
        margin-top: 20px;
        list-style: none;
        padding: 0;
    }

    .code-line {
        opacity: 0;
        transform: translateX(-10px);
        margin-bottom: 6px;
    }

    .code-line.green { color: #ffffff; }
    .code-line.blue { color: #9cdcfe; }
    .code-line.orange { color: #ce9178; }

    .line-1 { animation: fadeIn 0.4s forwards 2.0s; }
    .line-2 { animation: fadeIn 0.4s forwards 2.3s; }
    .line-3 { animation: fadeIn 0.4s forwards 2.6s; }
    .line-4 { animation: fadeIn 0.4s forwards 2.9s; }
    .line-5 { animation: fadeIn 0.4s forwards 3.2s; }

    @@keyframes typing { from { width: 0 } to { width: 160px } }
    @@keyframes blink { 50% { border-color: transparent } }
    @@keyframes fadeIn { to { opacity: 1; transform: translateX(0); } }
    @@keyframes load { to { width: 100%; } }
</style>

<div class="terminal-container">
    <div class="terminal-header">
        <div class="dots">
            <div class="dot red"></div>
            <div class="dot yellow"></div>
            <div class="dot green"></div>
        </div>
        <div class="terminal-title">bash — it-quang-minh</div>
    </div>
    <div class="terminal-body">
        <h1 class="main-title">Admin</h1>

        <div class="progress-section">
            <div style="color: #b5cea8">> Đang nạp dữ liệu hệ thống...</div>
            <div class="progress-bar-bg">
                <div class="progress-bar-fill"></div>
            </div>
        </div>

        <ul class="code-logs">
            <li class="code-line blue line-1">> system.initialize("IT_Quang_Minh")</li>
            <li class="code-line green line-2">[OK] Core modules loaded 100%</li>
            <li class="code-line orange line-3">> session.status: authenticated</li>
            <li class="code-line line-4">> Đang kết nối cơ sở dữ liệu...</li>
            <li class="code-line green line-5">> Chào mừng quay trở lại, Admin!</li>
        </ul>
    </div>
</div>

