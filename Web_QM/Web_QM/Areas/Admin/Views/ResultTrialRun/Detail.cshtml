@using Web_QM.Models
@model IEnumerable<ExamTrialRunAnswer>
@{
    ViewData["Title"] = "Kết quả kiểm tra";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <h4 class="card-title">Danh sách nhân viên làm bài kiểm tra: @ViewBag.ExamName - @ViewBag.TestLevel</h4>
                    <h4>
                        <a class="btn btn-success" href="~/admin/resulttrialrun/ExportToExcel?examid=@ViewBag.ExamId">Xuất excel</a>
                        <a class="btn btn-success" href="~/admin/resulttrialrun/show?examId=@ViewBag.ExamId&isShow=1">Hiển thị kết quả</a>
                        <a class="btn btn-success" href="~/admin/resulttrialrun/show?examId=@ViewBag.ExamId&isShow=0">Ẩn kết quả</a>
                    </h4>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã Code</th>
                                    <th>Tên Nhân Viên</th>
                                    <th>Đúng</th>
                                    <th>Sai</th>
                                    <th>Liệt</th>
                                    <th>Chi tiết bài làm</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody id="employeeTableBody">
                                @{
                                    int counter = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr class="context-menu-row"
                                        data-id="@item.Id"
                                        data-employeename="@item.EmployeeName"
                                        data-employeecode="@item.EmployeeCode"
                                        data-listanswer="@item.ListAnswer"
                                        data-isshow="@item.IsShow"
                                        data-examid="@item.ExamTrialRunId"
                                        data-note="@item.Note"
                                        data-createddate="@item.CreatedDate"
                                        data-mc-correct="@item.MultipleChoiceCorrect"
                                        data-mc-incorrect="@item.MultipleChoiceInCorrect"
                                        data-mc-fail="@item.MultipleChoiceFail"
                                        data-essay-correct="@item.EssayCorrect"
                                        data-essay-incorrect="@item.EssayInCorrect"
                                        data-essay-fail="@item.EssayFail"
                                        data-essayresultpdf="@item.EssayResultPDF">
                                        <td>@(counter++)</td>
                                        <td>@item.EmployeeCode</td>
                                        <td>@item.EmployeeName</td>
                                        @{
                                            var totalQuestions = item.MultipleChoiceCorrect + item.EssayCorrect +
                                            item.MultipleChoiceInCorrect + item.EssayInCorrect +
                                            item.MultipleChoiceFail + item.EssayFail;

                                            var totalCorrect = item.MultipleChoiceCorrect + item.EssayCorrect;
                                            var correctPercentage = (totalQuestions > 0) ? ((double)totalCorrect / totalQuestions * 100) : 0;
                                            var correctClass = "";
                                            if (item.MultipleChoiceFail + item.EssayFail == 0)
                                            {
                                                if (correctPercentage >= 60)
                                                {
                                                    correctClass = "text-success";
                                                }
                                                else if (correctPercentage >= 50)
                                                {
                                                    correctClass = "text-warning";
                                                }
                                                else
                                                {
                                                    correctClass = "text-danger";
                                                }
                                            }
                                            else
                                            {
                                                correctClass = "text-danger";
                                            }
                                        }
                                        <td class="@correctClass">@(item.MultipleChoiceCorrect + item.EssayCorrect)</td>
                                        <td>@(item.MultipleChoiceInCorrect + item.EssayInCorrect)</td>
                                        <td>@(item.MultipleChoiceFail + item.EssayFail)</td>
                                        <td>
                                            <a href="#" class="ms-2 view-mc-answers" data-bs-toggle="modal" data-bs-target="#mcAnswersModal" data-listanswer="@item.ListAnswer" data-employeename="@item.EmployeeName">
                                                Trắc nghiệm
                                            </a>
                                            |
                                            <a href="#" class="view-pdf-embed" data-pdf-url="@item.EssayResultPDF">
                                                Tự luận
                                            </a>
                                        </td>
                                        <td>@item.Note</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateScoreModal" tabindex="-1" aria-labelledby="updateScoreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="updateScoreModalLabel">Cập nhật điểm</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateScoreForm" enctype="multipart/form-data">
                    <input type="hidden" id="employeeAnswerId" name="Id" />
                    <input type="hidden" id="employeeNameInput" name="EmployeeName" />
                    <input type="hidden" id="employeeCodeInput" name="EmployeeCode" />
                    <input type="hidden" id="listAnswerInput" name="ListAnswer" />
                    <input type="hidden" id="examIdInput" name="ExamTrialRunId" />
                    <input type="hidden" id="createdDateInput" name="CreatedDate" />
                    <input type="hidden" id="mcCorrectInput" name="MultipleChoiceCorrect" />
                    <input type="hidden" id="mcIncorrectInput" name="MultipleChoiceInCorrect" />
                    <input type="hidden" id="mcFailInput" name="MultipleChoiceFail" />
                    <input type="hidden" id="essayResultPdfInput" name="EssayResultPDF" />

                    <div class="row">
                        <h5>Điểm tự luận:</h5>
                        <div class="form-group col-4">
                            <label for="EssayCorrectInput">Đúng</label>
                            <input type="number" class="form-control" id="EssayCorrectInput" min="0" name="EssayCorrect" required>
                        </div>
                        <div class="form-group col-4">
                            <label for="EssayInCorrectInput">Sai</label>
                            <input type="number" class="form-control" id="EssayInCorrectInput" min="0" name="EssayInCorrect" required>
                        </div>
                        <div class="form-group col-4">
                            <label for="EssayFailInput">Liệt</label>
                            <input type="number" class="form-control" id="EssayFailInput" min="0" name="EssayFail" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="pdfFileInput">Tải lên bài làm tự luận (PDF)</label>
                        <input type="file" class="form-control" id="pdfFileInput" name="pdfFile" accept=".pdf">
                    </div>

                    <div class="form-group mb-3">
                        <label for="noteInput">Ghi chú</label>
                        <input type="text" class="form-control" id="noteInput" name="Note">
                    </div>
                    <div class="form-group mb-3">
                        <label for="isShowSelect">Trạng thái hiển thị</label>
                        <select class="form-control" id="isShowSelect" name="IsShow">
                            <option value="1">Hiển thị kết quả</option>
                            <option value="0">Ẩn kết quả</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="saveChangesBtn">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="pdfEmbedModal" tabindex="-1" aria-labelledby="pdfEmbedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="pdfEmbedModalLabel">Xem Bài Làm Tự Luận</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0" style="height: 80vh;">
                <div id="pdfEmbedContainer" style="width: 100%; height: 100%;"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mcAnswersModal" tabindex="-1" aria-labelledby="mcAnswersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="mcAnswersModalLabel">Đáp án Trắc nghiệm</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="answersContainer" class="d-flex flex-wrap">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tableBody = document.querySelector('table tbody');
            const contextMenu = document.createElement('div');
            contextMenu.id = 'contextMenu';
            contextMenu.classList.add('dropdown-menu');
            contextMenu.innerHTML = `
                <a class="dropdown-item" href="#" data-action="update">Cập nhật</a>
                <a class="dropdown-item" href="#" data-action="delete">Xóa</a>
            `;
            document.body.appendChild(contextMenu);

            let currentRowData = null;

            tableBody.addEventListener('contextmenu', function (event) {
                const row = event.target.closest('tr');
                if (!row) return;

                event.preventDefault();
                
                currentRowData = Object.assign({}, row.dataset);

                contextMenu.style.display = 'block';
                contextMenu.style.left = event.pageX + 'px';
                contextMenu.style.top = event.pageY + 'px';
            });

            document.addEventListener('click', function (e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.style.display = 'none';
                }
            });

            contextMenu.addEventListener('click', function (event) {
                event.preventDefault();
                contextMenu.style.display = 'none';
                const action = event.target.getAttribute('data-action');

                if (!currentRowData) return;

                if (action === 'update') {
                    const updateScoreModal = document.getElementById('updateScoreModal');
                    const modalForm = document.getElementById('updateScoreForm');
                    
                    modalForm.querySelector('#employeeAnswerId').value = currentRowData.id;
                    modalForm.querySelector('#employeeNameInput').value = currentRowData.employeename;
                    modalForm.querySelector('#employeeCodeInput').value = currentRowData.employeecode;
                    modalForm.querySelector('#listAnswerInput').value = currentRowData.listanswer;
                    modalForm.querySelector('#examIdInput').value = currentRowData.examid;
                    modalForm.querySelector('#createdDateInput').value = currentRowData.createddate;
                    modalForm.querySelector('#noteInput').value = currentRowData.note;
                    modalForm.querySelector('#isShowSelect').value = currentRowData.isshow;
                    modalForm.querySelector('#mcCorrectInput').value = currentRowData.mcCorrect;
                    modalForm.querySelector('#mcIncorrectInput').value = currentRowData.mcIncorrect;
                    modalForm.querySelector('#mcFailInput').value = currentRowData.mcFail;
                    modalForm.querySelector('#EssayCorrectInput').value = currentRowData.essayCorrect;
                    modalForm.querySelector('#EssayInCorrectInput').value = currentRowData.essayIncorrect;
                    modalForm.querySelector('#EssayFailInput').value = currentRowData.essayFail;
                    modalForm.querySelector('#essayResultPdfInput').value = currentRowData.essayresultpdf;

                    updateScoreModal.querySelector('.modal-title').textContent = 'Cập nhật điểm cho ' + currentRowData.employeename;

                    const modal = new bootstrap.Modal(updateScoreModal);
                    modal.show();
                } else if (action === 'delete') {
                    if (confirm('Xóa kết quả kiểm tra của nhân viên ' + currentRowData.employeename + '?')) {
                        safeRedirect(`/admin/resulttrialrun/delete?id=${currentRowData.id}`);
                    }
                }
            });

            document.getElementById('saveChangesBtn').addEventListener('click', async function (event) {
                event.preventDefault();

                const form = document.getElementById('updateScoreForm');
                const formData = new FormData(form);

                try {
                    const response = await fetch('/Admin/ResultTrialRun/UpdatePoint', {
                        method: 'POST',
                        body: formData
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        const errorMessage = await response.text();
                        alert('Có lỗi xảy ra! Kiểm tra lại dữ liệu: ' + errorMessage);
                    }
                } catch (error) {
                    console.error('Lỗi khi gửi form:', error);
                    alert('Đã xảy ra lỗi. Vui lòng thử lại sau!');
                }
            });

            document.querySelectorAll('.view-pdf-embed').forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    const pdfUrl = this.getAttribute('data-pdf-url');
                    const embedContainer = document.getElementById('pdfEmbedContainer');
                    const modal = new bootstrap.Modal(document.getElementById('pdfEmbedModal'));

                    if (embedContainer && pdfUrl) {
                        embedContainer.innerHTML = '';
                        const embedElement = document.createElement('embed');
                        embedElement.src = pdfUrl;
                        embedElement.type = 'application/pdf';
                        embedElement.width = '100%';
                        embedElement.height = '100%';
                        embedElement.title = 'Web PDF Viewer';

                        embedContainer.appendChild(embedElement);
                        modal.show();
                    }
                });
            });

            // XỬ LÝ SỰ KIỆN NHẤP VÀO LINK XEM ĐÁP ÁN TRẮC NGHIỆM
            const questions = @Html.Raw(Json.Serialize(ViewBag.Questions));
            document.querySelectorAll('.view-mc-answers').forEach(link => {
                link.addEventListener('click', function (event) {
                    const listAnswerString = this.getAttribute('data-listanswer');
                    const employeeName = this.getAttribute('data-employeename');
                    const answersContainer = document.getElementById('answersContainer');
                    answersContainer.innerHTML = '';

                    const userAnswers = {};
                    if (listAnswerString) {
                        listAnswerString.split('-').forEach(item => {
                            const [questionNumber, userAnswer] = item.split('.');
                            if (questionNumber && userAnswer) {
                                userAnswers[questionNumber] = userAnswer;
                            }
                        });
                    }

                    questions.forEach(q => {
                        const questionNumber = q.questionNumber.toString();
                        const userAnswer = userAnswers[questionNumber];
                        const correctAnswer = q.correctOption;
                        const isCritical = q.isCritical;

                        const questionDiv = document.createElement('div');
                        questionDiv.className = 'card mb-3 shadow-sm';

                        const cardBody = document.createElement('div');
                        cardBody.className = 'card-body';

                        const questionTitle = document.createElement('h5');
                        questionTitle.className = 'card-title fs-6';

                        let titleHtml = `Câu ${questionNumber}`;
                        if (isCritical) {
                            titleHtml += ` <span class="text-danger">(Điểm liệt)</span>`;
                        }
                        titleHtml += `: ${q.questionText}`;
                        questionTitle.innerHTML = titleHtml;

                        cardBody.appendChild(questionTitle);

                        const optionList = document.createElement('ul');
                        optionList.className = 'list-unstyled';

                        const createOptionElement = (optionKey, optionHtml) => {
                            const optionItem = document.createElement('li');
                            optionItem.className = 'mb-1';

                            let colorClass = '';
                            let iconHtml = '';

                            if (optionKey === correctAnswer) {
                                colorClass = 'text-success fw-bold';
                                iconHtml = '<i class="mdi mdi-check-circle-outline me-2"></i>';
                            }

                            if (userAnswer && optionKey === userAnswer) {
                                if (userAnswer === correctAnswer) {
                                    colorClass = 'text-success fw-bold';
                                    iconHtml = '<i class="mdi mdi-check-circle-outline me-2"></i>';
                                } else {
                                    colorClass = 'text-danger fw-bold';
                                    iconHtml = '<i class="mdi mdi-close-circle-outline me-2"></i>';
                                }
                            } else if (!userAnswer && optionKey === correctAnswer) {
                                colorClass = 'text-info fw-bold';
                                iconHtml = '<i class="mdi mdi-check-circle-outline me-2"></i>';
                            }

                            optionItem.className += ` ${colorClass}`;
                            optionItem.innerHTML = `${iconHtml}<strong>${optionKey}</strong>. ${optionHtml}`;
                            return optionItem;
                        };

                        optionList.appendChild(createOptionElement('A', q.optionA));
                        optionList.appendChild(createOptionElement('B', q.optionB));
                        optionList.appendChild(createOptionElement('C', q.optionC));
                        optionList.appendChild(createOptionElement('D', q.optionD));

                        cardBody.appendChild(optionList);
                        questionDiv.appendChild(cardBody);
                        answersContainer.appendChild(questionDiv);
                    });

                    const mcAnswersModalLabel = document.getElementById('mcAnswersModalLabel');
                    mcAnswersModalLabel.textContent = `Đáp án Trắc nghiệm của ${employeeName}`;
                });
            });
        });
    </script>
}