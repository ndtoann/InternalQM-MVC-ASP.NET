@using Web_QM.Models.ViewModels
@model IEnumerable<TimeSheetView>
@{
    ViewData["Title"] = "Bảng chấm công";
    DateTime currentDate = DateTime.Now;
    string defaultMonth = ViewBag.DefaultMonth != null ? ViewBag.DefaultMonth.ToString() : currentDate.ToString("yyyy-MM");
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bảng chấm công</h4>

                    <div class="mb-3 d-flex justify-content-end space-x-2">
                        <a href="#" id="bulkRejectButton" class="btn btn-warning" asp-policy="ApproveTimeSheet">
                            Trả lại phiếu
                        </a>
                        <a href="#" id="bulkApproveButton" class="btn btn-success" asp-policy="ApproveTimeSheet">
                            Duyệt phiếu
                        </a>
                    </div>
                    <form action="" method="get">
                        <div class="row align-items-center">
                            <div class="col-lg-3">
                                <div class="form-group mb-0">
                                    <input class="form-control" type="month" name="dateMonth" value="@defaultMonth" />
                                </div>
                            </div>
                            <div class="col-lg-5 d-flex align-items-center">
                                <div class="form-group me-2 flex-grow-1 mb-0">
                                    <input type="text"
                                           class="form-control"
                                           name="key"
                                           placeholder="Nhập vào đây để tìm kiếm"
                                           value="@ViewBag.KeySearch" />
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="accountTable">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>
                                        <input type="checkbox" id="checkAll" />
                                    </th>
                                    <th>Tháng-Năm</th>
                                    <th>Nhân viên</th>
                                    <th>Tổng giờ làm</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var count = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.Id" data-month="@item.DateMonth" data-employee-id="@item.EmployeeId" data-employee-name="@item.EmployeeName">
                                        <td>@(count++)</td>
                                        <td>
                                            @if (item.Status == 2)
                                            {
                                                <input type="checkbox" class="checkItem" data-id="@item.Id" />
                                            }
                                        </td>
                                        <td>
                                            <a href="#" class="view-timesheet-detail"
                                               data-id="@item.Id"
                                               data-month="@item.DateMonth">
                                                @item.DateMonth
                                            </a>
                                        </td>
                                        <td>@item.EmployeeCode - @item.EmployeeName</td>
                                        <td>@(Math.Floor(item.TotalHours * 10) / 10) h</td>
                                        <td>
                                            @if (item.Status == 2)
                                            {
                                                <span class="badge bg-warning">Chờ tổ trưởng duyệt</span>
                                            }
                                            else if(item.Status == 3)
                                            {
                                                <span class="badge bg-success">Tổ trưởng đã duyệt</span>
                                            }
                                            else if (item.Status == 4)
                                            {
                                                <span class="badge bg-danger">Tổ trưởng trả lại</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="timekeepingDetailModal" tabindex="-1" role="dialog" aria-labelledby="timekeepingDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="timekeepingDetailModalLabel">Chi tiết chấm công tháng <span id="modalMonthDisplay"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#timekeepingDetailModal').modal('hide')">
                    <span class="fs-2" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-info fs-3 fw-bold">Nhân viên: <span id="modalEmployeeDisplay"></span></p>
                <div id="calendarContainer" class="mt-3">
                    <div id="loadingCalendar" class="text-center text-primary">Đang tải chi tiết...</div>
                    <table class="table table-striped table-bordered" id="calendarTable" style="display:none;">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Thứ</th>
                                <th>Ca</th>
                                <th>Giờ Vào</th>
                                <th>Giờ Ra</th>
                                <th>Tổng giờ</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody id="calendarBody">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="$('#timekeepingDetailModal').modal('hide')">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const checkAll = document.getElementById('checkAll');
        const checkItems = document.getElementsByClassName('checkItem');
        const bulkApproveButton = document.getElementById('bulkApproveButton');
        const bulkRejectButton = document.getElementById('bulkRejectButton');
        const tableBody = document.querySelector('#accountTable tbody');

        checkAll.addEventListener('change', (e) => {
            [...checkItems].forEach(item => {
                if (!item.disabled) {
                    item.checked = e.target.checked;
                }
            });
        });

        tableBody.addEventListener('change', (e) => {
            if (e.target.classList.contains('checkItem')) {
                const checkedCount = [...checkItems].filter(item => item.checked).length;
                const totalCount = [...checkItems].length;

                checkAll.checked = (checkedCount === totalCount && totalCount > 0);
                checkAll.indeterminate = (checkedCount > 0 && checkedCount < totalCount);
            }
        });

        const processTimesheets = async (ids, actionType) => {
            if (ids.length === 0) {
                Swal.fire('Thông báo', 'Vui lòng chọn ít nhất một phiếu cần ' + (actionType === 'Approve' ? 'duyệt' : 'trả lại') + '.', 'warning');
                return;
            }

            const actionText = actionType === 'Approve' ? 'Duyệt' : 'Trả Lại';
            const confirmColor = actionType === 'Approve' ? '#22c55e' : '#ffc107';
            const apiEndpoint = actionType === 'Approve' ? '/Admin/Timesheet/ApproveMultiple' : '/Admin/Timesheet/RejectMultiple';

            const result = await Swal.fire({
                title: 'Xác Nhận ' + actionText + ' Hàng Loạt',
                html: 'Bạn có chắc chắn muốn ' + (actionType === 'Approve' ? 'duyệt' : 'trả lại') + ' ' + ids.length + ' phiếu đã chọn?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: confirmColor,
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Đồng ý, ' + actionText + '!',
                cancelButtonText: 'Hủy'
            });

            if (!result.isConfirmed) return;

            const button = actionType === 'Approve' ? bulkApproveButton : bulkRejectButton;
            button.disabled = true;
            button.textContent = 'Đang ' + actionText + '...';

            try {
                const response = await fetch(apiEndpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ Ids: ids })
                });

                const apiResult = await response.json();
                if (response.ok && apiResult.success) {
                    Swal.fire(
                        'Thành Công!',
                        'Đã ' + (actionType === 'Approve' ? 'duyệt' : 'trả lại') + ' thành công ' + (apiResult.count || ids.length) + ' phiếu.',
                        'success'
                    );
                    location.reload();
                } else {
                    throw new Error(apiResult.message || 'Lỗi khi ' + (actionType === 'Approve' ? 'duyệt' : 'trả lại') + ' phiếu.');
                }
            } catch (error) {
                Swal.fire('Lỗi!', actionText + ' phiếu thất bại: ' + error.message, 'error');
            } finally {
                button.disabled = false;
                button.textContent = actionText + ' Các Mục Đã Chọn';
            }
        };

        const getSelectedIds = () => [...checkItems]
            .filter(item => item.checked)
            .map(item => item.getAttribute('data-id'));

        bulkApproveButton.addEventListener('click', () => {
            processTimesheets(getSelectedIds(), 'Approve');
        });

        bulkRejectButton.addEventListener('click', () => {
            processTimesheets(getSelectedIds(), 'Reject');
        });

        const formatTime = (timeString) => {
            if (!timeString) return '-';
            const parts = timeString.split(':');
            return parts.length >= 2 ? parts[0] + ':' + parts[1] : timeString;
        };

        const getDaysInMonth = (year, month) => new Date(year, month, 0).getDate();

        const daysInVietnamese = ["CN", "T2", "T3", "T4", "T5", "T6", "T7"];

        const fetchTimekeepingDetails = async (timesheetId, dateMonth) => {
            const calendarBody = document.getElementById('calendarBody');
            const loadingCalendar = document.getElementById('loadingCalendar');
            const calendarTable = document.getElementById('calendarTable');

            calendarBody.innerHTML = '';
            loadingCalendar.style.display = 'block';
            calendarTable.style.display = 'none';
            loadingCalendar.className = 'text-center text-primary';
            loadingCalendar.textContent = 'Đang tải chi tiết...';

            let month, year;
            const parts = dateMonth ? dateMonth.split(/[/-]/) : [];

            if (parts.length === 2) {
                if (parseInt(parts[0]) > 12) {
                    year = parseInt(parts[0]);
                    month = parseInt(parts[1]);
                } else {
                    month = parseInt(parts[0]);
                    year = parseInt(parts[1]);
                }
            }

            if (isNaN(month) || isNaN(year) || month < 1 || month > 12) {
                loadingCalendar.style.display = 'block';
                loadingCalendar.className = 'text-center text-danger';
                loadingCalendar.textContent = 'Lỗi định dạng ngày tháng: ' + dateMonth + ' không hợp lệ.';
                calendarTable.style.display = 'none';
                return;
            }

            const daysInMonth = new Date(year, month, 0).getDate();

            try {
                const response = await fetch('/Admin/Timesheet/GetTimekeeping?timesheetId=' + timesheetId);
                if (!response.ok) throw new Error('Lỗi mạng hoặc không tìm thấy dữ liệu.');

                const rawData = await response.json();

                const dataMap = rawData.reduce((acc, item) => {
                    const rawWorkDate = item.workDate || '';
                    const keyDate = rawWorkDate.split('T')[0];

                    if (keyDate) {
                        acc[keyDate] = item;
                    }
                    return acc;
                }, {});

                loadingCalendar.style.display = 'none';
                calendarTable.style.display = 'table';

                let html = '';

                for (let day = 1; day <= daysInMonth; day++) {
                    const date = new Date(year, month - 1, day);
                    const dateOnlyString = year + '-' + String(month).padStart(2, '0') + '-' + String(day).padStart(2, '0');
                    const dayOfWeekIndex = date.getDay();

                    const dayData = dataMap[dateOnlyString] || {};

                    const dayDisplay = String(day).padStart(2, '0') + '/' + String(month).padStart(2, '0');
                    const dayOfWeekDisplay = daysInVietnamese[dayOfWeekIndex];

                    const hasTimeData = dayData.timeIn || dayData.timeOut;

                    const timeInDisplay = hasTimeData && dayData.timeIn ? formatTime(dayData.timeIn) : '-';
                    const timeOutDisplay = hasTimeData && dayData.timeOut ? formatTime(dayData.timeOut) : '-';
                    const totalHoursDisplay = dayData.totalHours ? dayData.totalHours.toFixed(2) + 'h' : '-';
                    const shiftDisplay = hasTimeData && dayData.shift ? dayData.shift : '-';
                    const noteDisplay = dayData.note || '';

                    html += '<tr>' +
                        '<td>' + dayDisplay + '</td>' +
                        '<td>' + dayOfWeekDisplay + '</td>' +
                        '<td>' + shiftDisplay + '</td>' +
                        '<td>' + timeInDisplay + '</td>' +
                        '<td>' + timeOutDisplay + '</td>' +
                        '<td>' + totalHoursDisplay + '</td>' +
                        '<td>' + noteDisplay + '</td>' +
                        '</tr>';
                }

                calendarBody.innerHTML = html;

            } catch (error) {
                loadingCalendar.style.display = 'block';
                loadingCalendar.className = 'text-center text-danger';
                loadingCalendar.textContent = 'Lỗi khi tải chi tiết: ' + error.message;
                calendarTable.style.display = 'none';
            }
        };

        tableBody.addEventListener('click', (e) => {
            if (e.target.classList.contains('view-timesheet-detail')) {
                e.preventDefault();
                const timesheetId = e.target.getAttribute('data-id');
                const dateMonth = e.target.getAttribute('data-month');
                const row = e.target.closest('tr');
                const employeeName = row.getAttribute('data-employee-name');

                document.getElementById('modalMonthDisplay').textContent = dateMonth;
                document.getElementById('modalEmployeeDisplay').textContent = employeeName;

                $('#timekeepingDetailModal').modal('show');
                fetchTimekeepingDetails(timesheetId, dateMonth);
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            toggleBulkButton();
        });

    </script>
}