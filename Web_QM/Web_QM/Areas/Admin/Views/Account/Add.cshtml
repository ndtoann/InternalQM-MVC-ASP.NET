@using Web_QM.Models
@model Account;
@{
    ViewData["Title"] = "Thêm tài khoản";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thêm tài khoản</h4>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="add" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="UserName">Tên người dùng</label>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="Nhập tên người dùng">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Password">Mật khẩu</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="StaffCode">Nhân viên</label>
                            <select asp-for="StaffCode" asp-items="ViewBag.ListEmployee" class="js-example-basic-multiple w-100">
                                <option value="">Chọn nhân viên</option>
                            </select>
                            <span asp-validation-for="StaffCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Lưu
                        </button>
                        <a href="~/admin/account" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}