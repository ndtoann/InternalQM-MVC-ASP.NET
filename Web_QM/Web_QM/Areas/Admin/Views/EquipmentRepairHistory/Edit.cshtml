@using Web_QM.Models
@model EquipmentRepairHistory;
@{
    ViewData["Title"] = "Cập nhật sửa chữa thiết bị";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Cập nhật sửa chữa thiết bị</h4>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="edit" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label asp-for="Department">Bộ phận</label>
                                <select asp-for="Department" asp-items="@(ViewData["Departments"] as List<SelectListItem>)" class="form-control"></select>
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="EquipmentName">Tên thiết bị</label>
                                <input asp-for="EquipmentName" type="text" class="form-control">
                                <span asp-validation-for="EquipmentName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label asp-for="EquipmentCode">Mã thiết bị</label>
                                <input asp-for="EquipmentCode" type="text" class="form-control">
                                <span asp-validation-for="EquipmentCode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-2">
                                <label asp-for="Qty">Số lượng</label>
                                <input asp-for="Qty" type="number" class="form-control">
                                <span asp-validation-for="Qty" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ErrorCondition">Tình trạng lỗi hỏng</label>
                            <input asp-for="ErrorCondition" type="text" class="form-control">
                            <span asp-validation-for="ErrorCondition" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Reason">Nguyên nhân</label>
                            <input asp-for="Reason" type="text" class="form-control">
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProcessingMethod">Phương pháp xử lý</label>
                            <input asp-for="ProcessingMethod" type="text" class="form-control">
                            <span asp-validation-for="ProcessingMethod" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label asp-for="DateMonth">Ngày tiếp nhận</label>
                                <input asp-for="DateMonth" type="date" class="form-control">
                                <span asp-validation-for="DateMonth" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="ConfirmCompletionDate">BPBT xác nhận ngày hoàn thành</label>
                                <input asp-for="ConfirmCompletionDate" type="date" class="form-control">
                                <span asp-validation-for="ConfirmCompletionDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="CompletionDate">Ngày hoàn thành</label>
                                <input asp-for="CompletionDate" type="date" class="form-control">
                                <span asp-validation-for="CompletionDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="RemedialStaff">Nhân viên khắc phục</label>
                            <input asp-for="RemedialStaff" type="text" class="form-control">
                            <span asp-validation-for="RemedialStaff" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RecipientOfRepairedDevice">Người tiếp nhận thiết bị đã sửa</label>
                            <input asp-for="RecipientOfRepairedDevice" type="text" class="form-control">
                            <span asp-validation-for="RecipientOfRepairedDevice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RepairCosts">Chi phí sửa chữa</label>
                            <input asp-for="RepairCosts" type="text" class="form-control">
                            <span asp-validation-for="RepairCosts" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note">Ghi chú</label>
                            <input asp-for="Note" type="text" class="form-control">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Lưu
                        </button>
                        <button type="reset" class="btn btn-warning btn-icon-text">
                            <i class="ti-reload btn-icon-prepend"></i>
                            Làm mới
                        </button>
                        <a href="~/admin/equipmentrepairhistory" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}