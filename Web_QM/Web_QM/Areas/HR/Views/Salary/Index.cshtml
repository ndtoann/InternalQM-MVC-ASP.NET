@using Web_QM.Models.ViewModels
@model IEnumerable<SalaryView>;
@{
    ViewData["Title"] = "Quản lý lương";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách nhân viên</h4>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="" method="get">
                        <div class="row align-items-center">
                            <div class="col-lg-3">
                                <div class="form-group mb-0">
                                    <select class="form-control" name="department" asp-items="@(ViewData["Departments"] as List<SelectListItem>)"></select>
                                </div>
                            </div>
                            <div class="col-lg-5 d-flex align-items-center">
                                <div class="form-group me-2 flex-grow-1 mb-0">
                                    <input type="text"
                                           class="form-control"
                                           name="key"
                                           placeholder="Nhập vào đây để tìm kiếm"
                                           value="@ViewBag.KeySearch" />
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <a class="btn btn-success" href="~/hr/salary/add" asp-policy="AddSalary">Thêm mới</a>
                    <a class="btn btn-success" href="#" data-bs-toggle="modal" data-bs-target="#importExcelModal" asp-policy="AddSalary">Import Excel</a>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Nhân viên</th>
                                    <th>Bộ phận</th>
                                    <th>Bậc lương</th>
                                    <th>Lương cơ bản</th>
                                    <th>Lương đóng BH</th>
                                </tr>
                            </thead>
                            <tbody class="salary-table-body">
                                @{
                                    var count = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr class="context-menu-row" data-id="@item.Id" data-employee="@item.EmployeeCode - @item.EmployeeName">
                                        <td>@(count++)</td>
                                        <td>@item.EmployeeCode - @item.EmployeeName</td>
                                        <td>@item.Department</td>
                                        <td>Bậc @item.LevelSalary</td>
                                        <td>@(item.BaseSalary.ToString("N0") ?? "") vnd</td>
                                        <td>@(item.InsuranceSalary?.ToString("N0") ?? "") vnd</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="importExcelModal" tabindex="-1" aria-labelledby="importExcelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importExcelModalLabel">Import</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importForm" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div id="import-alert" class="alert d-none" role="alert"></div>

                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Chọn File Excel (.xlsx, .xls)</label>
                        <input class="form-control" type="file" id="excelFile" name="excelFile" accept=".xlsx, .xls" required>
                    </div>

                    <p>
                        Vui lòng đảm bảo dùng đúng file excel mẫu.
                    </p>
                    <a href="~/hr/salary/DownloadTemplate" class="btn btn-sm btn-info" download>
                        <i class="mdi mdi-download"></i> Tải file mẫu Import
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary" id="btnImport">
                        <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        <span id="btnText">Thực hiện Import</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="contextMenu" class="dropdown-menu" style="position: absolute; display: none;">
    <a class="dropdown-item" href="#" id="viewLink">Xem chi tiết</a>
    <a class="dropdown-item" href="#" id="editLink">Sửa</a>
    <a class="dropdown-item" href="#" id="deleteLink">Xóa</a>
</div>

<div class="modal fade" id="salaryDetailModal" tabindex="-1" aria-labelledby="salaryDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="salaryDetailModalLabel">Chi Tiết Lương Nhân Viên: <span id="employee-detail-info"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr>
                                <th>Khoản Mục</th>
                                <th>Giá Trị (VNĐ)</th>
                                <th>Khoản Mục</th>
                                <th>Giá Trị (VNĐ)</th>
                            </tr>
                        </thead>
                        <tbody id="salary-details-body">
                        </tbody>
                    </table>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-end">
                        <p class="mb-1"><strong>Ngày tạo:</strong> <span id="created-date-info">N/A</span></p>
                        <p class="mb-0"><strong>Ngày cập nhật:</strong> <span id="updated-date-info">N/A</span></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatCurrency(value) {
            if (value === null || value === undefined) return '0';
            return parseFloat(value).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }).replace('₫', '');
        }

        function getDetails(id, employeeInfo) {
            fetch(`/hr/salary/GetDetails?id=${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Không tìm thấy dữ liệu lương.');
                    }
                    return response.json();
                })
                .then(data => {
                    const tbody = document.getElementById('salary-details-body');
                    tbody.innerHTML = '';
                    document.getElementById('employee-detail-info').textContent = employeeInfo;

                    document.getElementById('created-date-info').textContent = data.createdDate || 'N/A';
                    document.getElementById('updated-date-info').textContent = data.updatedDate || 'N/A';

                    const fields = [
                        { label: 'Bậc lương', key: 'levelSalary' },
                        { label: 'Lương cơ bản', key: 'baseSalary' },
                        { label: 'Lương đóng BH', key: 'insuranceSalary' },
                        { label: 'Tiền ăn', key: 'mealAllowance' },
                        { label: 'Tiền trách nghiệm ngày', key: 'dailyResponsibilityPay' },
                        { label: 'Phụ cấp xăng xe', key: 'fuelAllowance' },
                        { label: 'Phụ cấp làm ngoài', key: 'externalWorkAllowance' },
                        { label: 'Trợ cấp nhà trọ', key: 'housingSubsidy' },
                        { label: 'Tiền chuyên cần', key: 'diligencePay' },
                        { label: 'Không phạm lỗi', key: 'noViolationBonus' },
                        { label: 'Phụ cấp độc hại', key: 'hazardousAllowance' },
                        { label: 'Phụ cấp căng thẳng CNC', key: 'cncStressAllowance' },
                        { label: 'Phụ cấp thâm niên', key: 'seniorityAllowance' },
                        { label: 'Phụ cấp bằng', key: 'certificateAllowance' },
                        { label: 'Phụ cấp môi trường làm việc', key: 'workingEnvironmentAllowance' },
                        { label: 'Phụ cấp vị trí làm việc', key: 'jobPositionAllowance' },
                        { label: 'Phụ cấp chạy thử máy', key: 'machineTestRunAllowance' },
                        { label: 'Phụ cấp đo máy RVF', key: 'rvfMachineMeasurementAllowance' },
                        { label: 'Phụ cấp rửa hàng Inox', key: 'stainlessSteelCleaningAllowance' },
                        { label: 'Phụ cấp trông xưởng', key: 'factoryGuardAllowance' },
                        { label: 'Phụ cấp nặng nhọc', key: 'heavyDutyAllowance' },
                    ];

                    for (let i = 0; i < fields.length; i += 2) {
                        const field1 = fields[i];
                        const field2 = fields[i + 1];

                        const tr = document.createElement('tr');

                        let value1 = data[field1.key];
                        if (field1.key === 'levelSalary') {
                            value1 = `Bậc ${value1}`;
                        } else if (typeof value1 === 'number' || typeof value1 === 'string' && !isNaN(parseFloat(value1))) {
                            value1 = formatCurrency(value1);
                        }
                        tr.innerHTML += `<td>${field1.label}</td><td>${value1}</td>`;

                        if (field2) {
                            let value2 = data[field2.key];
                            if (field2.key === 'levelSalary') {
                                value2 = `Bậc ${value2}`;
                            } else if (typeof value2 === 'number' || typeof value2 === 'string' && !isNaN(parseFloat(value2))) {
                                value2 = formatCurrency(value2);
                            }
                            tr.innerHTML += `<td>${field2.label}</td><td>${value2}</td>`;
                        } else {
                            tr.innerHTML += `<td></td><td></td>`;
                        }
                        tbody.appendChild(tr);
                    }

                    new bootstrap.Modal(document.getElementById('salaryDetailModal')).show();
                })
                .catch(error => {
                    alert('Lỗi: ' + error.message);
                });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const tableBodies = document.querySelectorAll('.salary-table-body');
            const contextMenu = document.getElementById('contextMenu');
            let id = null;
            let employee = null;

            tableBodies.forEach(tableBody => {
                tableBody.addEventListener('contextmenu', function (event) {
                    const row = event.target.closest('tr');
                    if (!row) return;

                    event.preventDefault();

                    id = row.getAttribute('data-id');
                    employee = row.getAttribute('data-employee');

                    contextMenu.style.display = 'block';
                    contextMenu.style.left = event.pageX + 'px';
                    contextMenu.style.top = event.pageY + 'px';
                });
            });
            document.addEventListener('click', function (e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.style.display = 'none';
                }
            });

            document.getElementById('viewLink').addEventListener('click', function (event) {
                if (id) {
                    contextMenu.style.display = 'none';
                    getDetails(id, employee);
                }
            });

            document.getElementById('editLink').addEventListener('click', function (event) {
                if (id) {
                    window.location.href = `/hr/salary/edit?id=${id}`;
                }
            });

            document.getElementById('deleteLink').addEventListener('click', function (event) {
                if (id && confirm(`Bạn có chắc chắn muốn xóa thông tin lương nhân viên ${employee}?`)) {
                    window.location.href = `/hr/salary/delete?id=${id}`;
                }
            });

            const importForm = document.getElementById('importForm');
            const btnImport = document.getElementById('btnImport');
            const btnText = document.getElementById('btnText');
            const spinner = document.getElementById('spinner');
            const importModal = new bootstrap.Modal(document.getElementById('importExcelModal'));

            importForm.addEventListener('submit', function (e) {
                e.preventDefault();

                const file = document.getElementById('excelFile').files[0];
                if (!file) {
                    Swal.fire('Thao tác thất bại', 'Vui lòng chọn một file Excel để import.', 'warning');
                    return;
                }

                btnImport.disabled = true;
                btnText.textContent = 'Đang xử lý...';
                spinner.classList.remove('d-none');

                const formData = new FormData(importForm);

                fetch('/hr/salary/import', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else if (response.status === 400 || response.status === 500) {
                        return response.json().then(errorData => {
                            throw new Error(errorData.message);
                        });
                    }
                    throw new Error('Lỗi không xác định: ' + response.statusText);
                })
                .then(data => {
                    importModal.hide();
                    Swal.fire({
                        title: 'Import Thành công! 🎉',
                        html: data.message,
                        icon: 'success',
                        confirmButtonText: 'Đã hiểu'
                    }).then(() => {
                        location.reload();
                    });
                })
                .catch(error => {
                    importModal.hide();
                    console.error('Lỗi khi Import:', error);

                    Swal.fire({
                        title: 'Import Thất bại! ❌',
                        html: error.message,
                        icon: 'error',
                        confirmButtonText: 'Đóng'
                    }).then(() => {
                           importModal.show();
                    });
                })
                .finally(() => {
                    btnImport.disabled = false;
                    btnText.textContent = 'Thực hiện Import';
                    spinner.classList.add('d-none');
                });
            });
        });
    </script>
}