@using Web_QM.Models
@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách nhân viên</h4>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="" class="form-sample" method="get">
                        <div class="row align-items-center">
                            <div class="col-lg-3">
                                <div class="form-group mb-0">
                                    <select class="form-control" name="department" asp-items="@(ViewData["Departments"] as List<SelectListItem>)"></select>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center">
                                <div class="form-group me-2 flex-grow-1 mb-0">
                                    <input type="text"
                                           class="form-control"
                                           name="key_search"
                                           placeholder="Nhập vào đây để tìm kiếm"
                                           value="@ViewBag.KeySearch" />
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <a class="btn btn-success mb-3" href="~/hr/employee/add" asp-policy="AddEmployee">Thêm nhân viên mới</a>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Avatar</th>
                                    <th>Nhân viên</th>
                                    <th>Bộ phận</th>
                                    <th>Chức vụ</th>
                                    <th>Ngày sinh</th>
                                    <th>Ngày vào công ty</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody id="employeeTableBody">
                                @{
                                    var count = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr class="context-menu-row" data-id="@item.Id" data-employee-name="@item.EmployeeName">
                                        <td>@(count++)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Avatar))
                                            {
                                                <img src="~/imgs/avatars/@item.Avatar" alt="Avatar" loading="lazy" style="max-width: 150px; border-radius: 10px;" />
                                            }
                                            else
                                            {
                                                <img src="~/imgs/avatars/default.png" alt="Avatar" loading="lazy" style="max-width: 150px; border-radius: 10px;" />
                                            }
                                        </td>
                                        <td><a href="~/hr/employee/detail?id=@item.Id">@item.EmployeeCode - @item.EmployeeName</a></td>
                                        <td>@item.Department</td>
                                        <td>@item.Position</td>
                                        <td>
                                            @if (item.DateOfBirth.HasValue)
                                            {
                                                @item.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                            }
                                        </td>
                                        <td>@item.HireDate.ToString("dd/MM/yyyy")</td>
                                        <td class="text-wrap">@item.Note</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contextMenu" class="dropdown-menu" style="position: absolute; display: none;">
    <a class="dropdown-item" href="#" id="viewLink">Xem chi tiết</a>
    <a class="dropdown-item" href="#" id="updateWorkLink">Cập nhật quá trình làm việc</a>
    <a class="dropdown-item" href="#" id="report5SLink">Báo lỗi 5S</a>
    <a class="dropdown-item" href="#" id="editLink">Sửa</a>
    <a class="dropdown-item" href="#" id="deleteLink">Xóa</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tableBody = document.getElementById('employeeTableBody');
            const contextMenu = document.getElementById('contextMenu');
            let employeeId = null;
            let employeeName = null;

            tableBody.addEventListener('contextmenu', function (event) {
                const row = event.target.closest('tr');
                if (!row) return;

                event.preventDefault();

                employeeId = row.getAttribute('data-id');
                employeeName = row.getAttribute('data-employee-name');

                contextMenu.style.display = 'block';
                contextMenu.style.left = event.pageX + 'px';
                contextMenu.style.top = event.pageY + 'px';
            });

            document.addEventListener('click', function (e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.style.display = 'none';
                }
            });

            document.getElementById('viewLink').addEventListener('click', function (event) {
                if (employeeId) {
                    window.location.href = `/hr/employee/detail?id=${employeeId}`;
                }
            });

            document.getElementById('updateWorkLink').addEventListener('click', function (event) {
                if (employeeId) {
                    window.location.href = `/hr/employee/updateWorkHistory?id=${employeeId}`;
                }
            });

            document.getElementById('report5SLink').addEventListener('click', function (event) {
                if (employeeId) {
                    window.location.href = `/hr/employee/viewViolation5S?id=${employeeId}`;
                }
            });

            document.getElementById('editLink').addEventListener('click', function (event) {
                if (employeeId) {
                    window.location.href = `/hr/employee/edit?id=${employeeId}`;
                }
            });

            document.getElementById('deleteLink').addEventListener('click', function (event) {
                if (employeeId && confirm(`Xóa toàn bộ thông tin nhân viên ${employeeName}?`)) {
                    window.location.href = `/hr/employee/delete?id=${employeeId}`;
                }
            });
        });
    </script>
}