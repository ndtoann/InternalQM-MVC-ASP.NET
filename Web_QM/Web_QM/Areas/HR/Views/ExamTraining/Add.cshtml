@using Web_QM.Models
@model ExamTraining
@{
    ViewData["Title"] = "Thêm bài kiểm tra";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thêm bài kiểm tra</h4>
                    <form action="add" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ExamName">Tên bài kiểm tra</label>
                            <input asp-for="ExamName" type="text" class="form-control" placeholder="Nhập tên bài kiểm tra">
                            <span asp-validation-for="ExamName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="DurationMinute">Thời gian làm bài</label>
                                <input asp-for="DurationMinute" type="number" class="form-control" placeholder="Nhập thời gian làm bài">
                                <span asp-validation-for="DurationMinute" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="TlTotal">Tổng điểm bài tự luận</label>
                                <input asp-for="TlTotal" type="number" class="form-control" placeholder="Nhập tổng điểm bài thi tự luận">
                                <span asp-validation-for="TlTotal" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="IsActive">Trạng thái</label>
                            <select asp-for="IsActive" class="form-control">
                                <option value="0">Tạm dừng</option>
                                <option value="1">Sẵn sàng</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EssayQuestion">Câu hỏi tự luận(PDF): </label>
                            <input asp-for="EssayQuestion" type="file" class="form-control" name="essayPdf" accept=".pdf">
                            <span asp-validation-for="EssayQuestion" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>    
                            Lưu
                        </button>
                        <a href="~/hr/examtraining" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}