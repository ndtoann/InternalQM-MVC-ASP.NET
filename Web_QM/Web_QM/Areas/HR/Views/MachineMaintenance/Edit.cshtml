@using Web_QM.Models
@model MachineMaintenance;
@{
    ViewData["Title"] = "Cập nhật lịch bảo dưỡng máy";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Cập nhật lịch bảo dưỡng máy</h4>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="edit" class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="MachineCode">Mã máy</label>
                            <select asp-for="MachineCode" asp-items="@(ViewData["Machines"] as List<SelectListItem>)" class="js-example-basic-multiple w-100">
                            </select>
                            <span asp-validation-for="MachineCode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label asp-for="DateMonth">Ngày bảo dưỡng</label>
                                <input asp-for="DateMonth" type="date" class="form-control">
                                <span asp-validation-for="DateMonth" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-8">
                                <label asp-for="MaintenanceStaff">Nhân viên bảo dưỡng</label>
                                <input asp-for="MaintenanceStaff" type="text" class="form-control">
                                <span asp-validation-for="MaintenanceStaff" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaintenanceContent">Nội dung bảo dưỡng</label>
                            <textarea asp-for="MaintenanceContent" class="form-control" style="min-height: 100px;"></textarea>
                            <span asp-validation-for="MaintenanceContent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note">Ghi chú</label>
                            <input asp-for="Note" type="text" class="form-control">
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="ti-file btn-icon-prepend"></i>
                            Lưu
                        </button>
                        <button type="reset" class="btn btn-warning btn-icon-text">
                            <i class="ti-reload btn-icon-prepend"></i>
                            Làm mới
                        </button>
                        <a href="~/hr/machinemaintenance" class="btn btn-light">Trờ về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}