@using Web_QM.Models
@model IEnumerable<MachineGroup>;
@{
    ViewData["Title"] = "Nhóm máy";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách nhóm máy</h4>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <a class="btn btn-success" href="~/production/machinegroup/add" asp-policy="AddMachineGroup">Thêm nhóm máy</a>
                    <div class="row mt-3">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên nhóm</th>
                                        <th>Loại nhóm máy</th>
                                        <th>Tiêu chí nhóm máy</th>
                                    </tr>
                                </thead>
                                <tbody class="mg-table-body">
                                    @{
                                        var count1 = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr class="context-menu-row"
                                            data-id="@item.Id"
                                            data-group-name="@item.GroupName">
                                            <td>@(count1++)</td>
                                            <td>@item.GroupName</td>
                                            <td>@item.MachineType</td>
                                            <td>@item.Standard</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contextMenu" class="dropdown-menu" style="position: absolute; display: none;">
    <a class="dropdown-item" href="#" id="viewMachinesLink">Danh sách máy</a>
    <a class="dropdown-item" href="#" id="editLink">Sửa</a>
    <a class="dropdown-item" href="#" id="deleteLink">Xóa</a>
</div>

<div class="modal fade" id="machineListModal" tabindex="-1" aria-labelledby="machineListModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="machineListModalLabel">Máy thuộc nhóm: <span></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3 p-3 border rounded">
                    <h6>Thêm máy mới vào nhóm</h6>
                    <div class="row g-3 align-items-end">
                        <div class="col-md-5">
                            <label for="newMachineCodeSelect" class="form-label">Mã máy (MachineCode)</label>
                            <select class="form-control" id="newMachineCodeSelect"></select>
                        </div>
                        <div class="col-md-5">
                            <label for="newMaterial" class="form-label">Vật liệu (Material)</label>
                            <input type="text" class="form-control" id="newMaterial">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" id="btnAddMachine">Thêm</button>
                        </div>
                    </div>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Mã máy</th>
                                <th>Vật liệu</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="machineListTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        let machineListModal;

        document.addEventListener('DOMContentLoaded', function () {
            machineListModal = new bootstrap.Modal(document.getElementById('machineListModal'));

            const contextMenu = document.getElementById('contextMenu');
            let mgId = null;
            let groupName = null;

            const tableBodies = document.querySelectorAll('.mg-table-body');
            tableBodies.forEach(tableBody => {
                tableBody.addEventListener('contextmenu', function (event) {
                    const row = event.target.closest('tr');
                    if (!row) return;

                    event.preventDefault();

                    mgId = row.getAttribute('data-id');
                    groupName = row.getAttribute('data-group-name');

                    contextMenu.style.display = 'block';
                    contextMenu.style.left = event.pageX + 'px';
                    contextMenu.style.top = event.pageY + 'px';
                });
            });

            document.addEventListener('click', function (e) {
                if (!contextMenu.contains(e.target)) {
                    contextMenu.style.display = 'none';
                }
            });

            document.getElementById('editLink').addEventListener('click', function (event) {
                if (mgId) {
                    window.location.href = `/production/machinegroup/edit?id=${mgId}`;
                }
            });

            document.getElementById('deleteLink').addEventListener('click', function (event) {
                if (mgId && confirm(`Bạn có chắc chắn muốn xóa nhóm máy: ${groupName}?`)) {
                    window.location.href = `/production/machinegroup/delete?id=${mgId}`;
                }
            });

            $('#newMachineCodeSelect').select2({
                dropdownParent: $('#machineListModal'),
                placeholder: 'Tìm kiếm và chọn máy...',
                allowClear: true,
                minimumInputLength: 1,
                ajax: {
                    url: '/production/machinegroup/GetMachineSelectOptions',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return {
                            term: params.term
                        };
                    },
                    processResults: function (data) {
                        return data;
                    },
                    cache: true
                }
            });

            document.getElementById('viewMachinesLink').addEventListener('click', function (event) {
                event.preventDefault();

                if (mgId) {
                    document.querySelector('#machineListModalLabel span').textContent = groupName;
                    loadMachineList(mgId);
                }
                contextMenu.style.display = 'none';
            });

            document.getElementById('btnAddMachine').addEventListener('click', function () {
                const machineCode = $('#newMachineCodeSelect').val(); 
                const material = document.getElementById('newMaterial').value.trim();

                if (!machineCode || !material) {
                    alert('Vui lòng chọn Mã máy và nhập Vật liệu.');
                    return;
                }

                addMachine(mgId, machineCode, material);
            });

            $('#machineListTableBody').on('click', '.btn-delete-machine', function () {
                const machineCodeToDelete = $(this).data('machine-code');
                const materialToDelete = $(this).data('material');

                if (confirm(`Bạn có chắc chắn muốn xóa máy ${machineCodeToDelete} khỏi nhóm này?`)) {
                    deleteMachine(mgId, machineCodeToDelete, materialToDelete);
                }
            });

            function loadMachineList(groupId) {
                $('#machineListTableBody').html('<tr><td colspan="3" class="text-center">Đang tải...</td></tr>');
                machineListModal.show();

                $.ajax({
                    url: `/production/machinegroup/GetMachinesByGroup`,
                    type: 'GET',
                    data: { machineGroupId: groupId },
                    success: function (data) {
                        renderMachineTable(data, groupId);
                    },
                    error: function (xproduction, status, error) {
                        $('#machineListTableBody').html('<tr><td colspan="3" class="text-danger">Lỗi tải dữ liệu.</td></tr>');
                        console.error("Lỗi tải máy:", error);
                    }
                });
            }

            function addMachine(groupId, machineCode, material) {
                $.ajax({
                    url: `/production/machinegroup/AddMachineToGroup`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ MachineCode: machineCode, MachineGroupId: groupId, Material: material }),
                    success: function (response) {
                        if (response.success) {
                            loadMachineList(groupId);
                            $('#newMachineCodeSelect').val(null).trigger('change');
                            document.getElementById('newMaterial').value = '';
                        } else {
                            alert('Lỗi thêm máy: ' + response.message);
                        }
                    },
                    error: function (xproduction, status, error) {
                        alert('Lỗi kết nối khi thêm máy.');
                        console.error("Lỗi thêm máy:", error);
                    }
                });
            }

            function deleteMachine(groupId, machineCode, material) {
                $.ajax({
                    url: `/production/machinegroup/RemoveMachineFromGroup`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ MachineCode: machineCode, MachineGroupId: groupId, Material: material }),
                    success: function (response) {
                        if (response.success) {
                            loadMachineList(groupId);
                        } else {
                            alert('Lỗi xóa máy: ' + response.message);
                        }
                    },
                    error: function (xproduction, status, error) {
                        alert('Lỗi kết nối khi xóa máy.');
                        console.error("Lỗi xóa máy:", error);
                    }
                });
            }

            function renderMachineTable(data, groupId) {
                const tbody = $('#machineListTableBody');
                    tbody.empty();

                    if (data && data.length > 0) {
                    data.forEach(item => {
                        const row = `
                            <tr>
                                <td>${item.machineCode}</td>
                                <td>${item.material}</td>
                                <td>
                                    <button class="btn btn-sm btn-danger btn-delete-machine"
                                            data-machine-code="${item.machineCode}"
                                            data-group-id="${groupId}"
                                            data-material="${item.material}">Xóa</button>
                                </td>
                            </tr>
                        `;
                        tbody.append(row);
                    });
                } else {
                    tbody.append('<tr><td colspan="3" class="text-center">Chưa có máy nào trong nhóm này.</td></tr>');
                }
            }
        });
    </script>
}